{
  "name": "@eric/chatgpt-electron",
  "version": "0.1.4",
  "description": "ChatGPT for Linux",
  "private": true,
  "type": "module",
  "main": "src/main.js",
  "scripts": {
		"start": "electron .",
		"dev": "electron .",
		"build": "electron-builder -l AppImage deb rpm",
		"build:linux": "electron-builder -l AppImage deb rpm",
		"build:appimage": "electron-builder -l AppImage",
		"release": "electron-builder -p always",
    "build:prep": "npm install",
    "build:auto": "distrobox-enter chatgpt-build -- /bin/bash -lc 'cd \"/home/eric/Developer/ChatGPT Electron\" && npm run build:prep && npm run build'"
  },
  "author": "Eric",
  "license": "MIT",
  "homepage": "https://chat.openai.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/erickrouss/chatgpt-linux.git"
  },
  "bugs": {
    "url": "https://github.com/erickrouss/chatgpt-linux/issues"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "adm-zip": "^0.5.12",
    "semver": "^7.6.3"
  },
  "build": {
    "appId": "com.eric.chatgptelectron",
    "productName": "ChatGPT",
    "files": [
      "src/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "extraResources": [
      {
        "from": "src/assets/chatgpt_icon.png",
        "to": "icons/chatgpt_icon.png"
      }
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "category": "Network",
      "maintainer": "Eric",
      "executableName": "chatgpt-electron",
      "artifactName": "chatgpt-${version}-${arch}.${ext}",
      "icon": "src/assets/chatgpt_icon.png",
      "desktop": {
        "entry": {
          "Name": "ChatGPT",
          "Comment": "ChatGPT desktop client",
          "StartupWMClass": "ChatGPT"
        }
      }
    },
    "publish": [
      {
        "provider": "github",
        "owner": "erickrouss",
        "repo": "chatgpt-linux"
      }
    ]
  }
}
